commands:
  01_enable_verbose_logging:
    command: |
      echo "======================================"
      echo "VERBOSE DEPLOYMENT LOGGING ENABLED"
      echo "======================================"
      set -x  # Enable verbose bash output
    ignoreErrors: true

container_commands:
  00_deployment_info:
    command: |
      echo "======================================"
      echo "DEPLOYMENT ENVIRONMENT INFORMATION"
      echo "======================================"
      echo "Python version: $(python --version 2>&1)"
      echo "Pip version: $(/var/app/venv/*/bin/pip --version)"
      echo "Available disk space: $(df -h / | tail -1)"
      echo "Available memory: $(free -h | grep Mem)"
      echo "Current directory: $(pwd)"
      echo "Directory contents:"
      ls -lah
      echo "======================================"
    leader_only: true
    ignoreErrors: true
