option_settings:
  aws:elasticbeanstalk:application:environment:
    TRANSFORMERS_CACHE: "/tmp/model_cache"
    SENTENCE_TRANSFORMERS_HOME: "/tmp/model_cache"
    TORCH_HOME: "/tmp/torch_cache"

commands:
  01_create_cache_dirs:
    command: "mkdir -p /tmp/model_cache /tmp/torch_cache && chmod 777 /tmp/model_cache /tmp/torch_cache"
    ignoreErrors: true
