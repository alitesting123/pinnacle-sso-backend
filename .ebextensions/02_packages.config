packages:
  yum:
    gcc: []
    gcc-c++: []
    make: []
    postgresql15-devel: []
    postgresql15: []
    # Additional dependencies for ML libraries
    atlas-devel: []
    blas-devel: []
    lapack-devel: []
    python3-devel: []

commands:
  01_upgrade_pip:
    command: |
      echo "======================================"
      echo "UPGRADING PIP, SETUPTOOLS, WHEEL"
      echo "======================================"
      /var/app/venv/*/bin/pip install --upgrade pip setuptools wheel --verbose 2>&1 | tee /tmp/pip_upgrade.log
      echo "âœ“ Pip upgrade complete"
      echo "======================================"
    ignoreErrors: false
